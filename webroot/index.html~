<script>

var eb = new vertx.EventBus('/eventbus');
eb.onopen = function() {
	$('emailMe').click(function() {
		eb.send("sendemail", {
			"from" : "coding@gmail.com",
			"to" : $('email').val(),
			"subject" : "test",
			"body" : $('textArea').val()
		});
	});

};

</script>
